{
  "swagger": "2.0",
  "info": {
    "title": "Rafting API",
    "description": "Water Rafting Web Services",
    "version": "1.0.0"
  },
  "host": "water-rafting.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/": {
      "get": {
        "description": "Root endpoint",
        "responses": {
          "200": { "description": "OK" }
        }
      }
    },
    "/trips/": {
      "get": {
        "description": "Get all trips",
        "responses": {
          "200": { "description": "List of trips returned successfully" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/trips/create": {
      "post": {
        "description": "Load trips from file into DB",
        "responses": {
          "201": { "description": "Trips loaded successfully" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/trips/{id}": {
      "get": {
        "description": "Get a trip by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "Trip returned successfully" },
          "404": { "description": "Trip not found" }
        }
      }
    },
    "/trips/add": {
      "post": {
        "description": "Add a new trip",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/Trip" }
          }
        ],
        "responses": {
          "201": { "description": "Trip created successfully" },
          "400": { "description": "Bad Request" }
        }
      }
    },
    "/trips/edit/{id}": {
      "put": {
        "description": "Update an existing trip",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/Trip" }
          }
        ],
        "responses": {
          "200": { "description": "Trip updated successfully" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Trip not found" }
        }
      }
    },
    "/trips/delete/{id}": {
      "delete": {
        "description": "Delete a trip",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "Trip deleted successfully" },
          "404": { "description": "Trip not found" }
        }
      }
    }
  },
  "definitions": {
    "Trip": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "location": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "price": { "type": "number" },
        "difficulty": { "type": "string", "enum": ["Beginner", "Intermediate", "Advanced"] },
        "capacity": { "type": "integer" },
        "availableSpots": { "type": "integer" }
      },
      "required": ["name", "location", "date", "price"]
    }
  }
}
